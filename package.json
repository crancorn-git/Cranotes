{
  "name": "cranotes",
  "private": true,
  "version": "1.2.2",
  "main": "dist-electron/main.cjs", 
  "author": "Cranotes Team",
  "description": "A calm, tile-based dashboard.",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "release": "./release.sh",
    "electron:build": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.cranotes.app",
    "productName": "Cranotes",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "publish": [
      {
        "provider": "github",
        "owner": "crancorn-git",
        "repo": "Cranotes"
      }
    ]
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.554.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^9.0.3"
  }
}
